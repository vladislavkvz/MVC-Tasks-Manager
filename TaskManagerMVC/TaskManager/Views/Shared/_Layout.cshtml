<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header" style="width: 75%;">
                @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                @if (TaskManager.Models.AuthenticationManager.LoggedUser == null)
                {
                    @Html.ActionLink("Login", "Login", "Home", new { area = "" }, new { @class = "navbar-brand" })
                }
                else
                {
                    @Html.ActionLink("Logout", "Logout", "Home", new { area = "" }, new { @class = "navbar-brand" });
                }
                @if (TaskManager.Models.AuthenticationManager.LoggedUser == null)
                {
                    @Html.ActionLink("Register", "Register", "Home", new { area = "" }, new { @class = "navbar-brand" });
                }
                <div style="float:right;">
                    @if (TaskManager.Models.AuthenticationManager.LoggedUser != null)
                    {
                        @Html.ActionLink("Tasks Manager", "Index", "TasksManager", new { area = "" }, new { @class = "navbar-brand" })
                        if (TaskManager.Models.AuthenticationManager.LoggedUser.IsAdmin == true)
                        {
                            @Html.ActionLink("Users Manager", "Index", "UsersManager", new { area = "" }, new { @class = "navbar-brand" })
                        }
                    }
                </div>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - VladislavKVZ</p>
        </footer>
    </div>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>