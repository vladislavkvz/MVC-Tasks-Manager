@model TaskManager.VIewModels.TaskManager.AllTasksVM

@{
    ViewBag.Title = "Index";
}
<h1 style="text-align:center;font-size: 46px;margin: 27px;">Manage Tasks</h1>
<p>
    @Html.ActionLink("Create New", "Edit")
</p>
<!-- Search Tasks-->
<div>
    @Html.Partial("_FilterPartial", Model.Filter)
</div>
<table class="table">
    <tr>
        <th>@Html.Label("Id")</th>
        <th>@Html.Label("ParentId")</th>
        <th>@Html.Label("Title")</th>
        <th>@Html.Label("Description")</th>
        <th>@Html.Label("ResponsibleUser")</th>
        <th>@Html.Label("Creator")</th>
        <th>@Html.Label("Status")</th>
        <th>@Html.Label("LastChange")</th>
        <th>@Html.Label("CreateTime")</th>
        <th></th>
    </tr>
    @foreach (var item in Model.Items)
            {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
                @item.UserId
            </td>
            <td>
                @item.Title
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @item.ResponsibleUser
            </td>
            <td>
                @item.Creator
            </td>
            <td>
                @item.Status
            </td>
            <td>
                @item.LastChange
            </td>
            <td>
                @item.CreateTime
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("More Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>
<!--Tasks Pager-->
<div>
    @Html.Partial("_PagingPartial", Model.Pager)
</div>
